{
  "name": "omegasisters-homepage",
  "description": "https://omegasisters.github.io/homepage",
  "version": "0.0.1",
  "scripts": {
    "dev": "browser-sync start --server --files '*' --no-open false .",
    "format": "prettier --write \"**/*.{css,html,json,md}\"",
    "build": "npm run pika:prd && npm run pika:dev && npm run ts",
    "pika:prd": "pika-web --dest web_modules --optimize",
    "pika:dev": "rm -rf homepage && mkdir -p homepage && cp -r web_modules homepage/web_modules",
    "ts": "rm -rf preact_build && tsc",
    "ts:watch": "tsc -w",
    "start": "npm run build && concurrently 'npm run ts:watch' 'npm run dev'",
    "start:docker": "npm run build && concurrently 'npm run ts:watch' 'serve -s ./'",
    "test": "jest"
  },
  "dependencies": {
    "preact": "^10.1.1"
  },
  "devDependencies": {
    "@pika/web": "^0.6.1",
    "@types/jest": "^24.0.24",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.0.0",
    "copyfiles": "^2.1.1",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "typescript": "^3.6.3",
    "serve": "^11.2.0"
  },
  "@pika/web": {
    "webDependencies": [
      "preact",
      "preact/hooks"
    ]
  },
  "main": "server.js",
  "bugs": {
    "url": "https://github.com/omegasisters/homepage/issues"
  },
  "homepage": "https://github.com/omegasisters/homepage",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/omegasisters/homepage.git"
  }
}
